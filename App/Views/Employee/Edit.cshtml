@model Employee
@{
    ViewData["Title"] = "Edit";
}

<h1 style="text-align:center">Edit Employee</h1>

<form asp-controller="Employee" asp-action="Edit" asp-route-id="@Model.Id" class="form m-2">
    <div>
        <label>Name</label>
        <input asp-for="Name" class=" form-control" />
    </div>
    <div>
        <label>Email</label>
        <input asp-for="Email" class=" form-control" />
    </div>
    <div>
        <label>Salary</label>
        <input asp-for="Salary" class=" form-control" />
    </div>
    <div>
        <label>Address</label>
        <input asp-for="Address" class=" form-control" />
    </div>
    <div>
        <label>Department</label>
        <select asp-for="DeptId" class="form form-control">
            @foreach (Department dept in ViewBag.deptList)
            {
                if(Model.DeptId == dept.Id){
                    <option value="@dept.Id" selected>@dept.Name</option>
                }else{
                    <option value="@dept.Id">@dept.Name</option>
                }
                
            }
            
        </select>
    </div>
    <input type="submit" value="Edit" class="btn btn-success m-2" />
    <a href="/Employee" class="btn btn-dark m-2">Back</a>
</form>




